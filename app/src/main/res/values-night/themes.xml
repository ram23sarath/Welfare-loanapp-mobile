<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.LoanApp" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@color/indigo_700</item>
        <item name="android:navigationBarColor">@color/slate_50</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash screen theme (Android 12+) - dark variant -->
    <style name="Theme.LoanApp.Splash" parent="Theme.LoanApp">
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
    </style>
    
    <!-- Launcher activity theme -->
    <style name="Theme.LoanApp.Launcher" parent="Theme.LoanApp">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>
</resources>
